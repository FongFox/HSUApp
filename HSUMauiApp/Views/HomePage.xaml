<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HSUMauiApp.Views.HomePage"
             BackgroundColor="White"
             Title="Trang chủ">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <!-- Tiêu đề -->
            <Label Text="Chào mừng đến với HSU!"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#003087"
                   HorizontalOptions="Center" />

            <!-- Danh sách MenuItems -->
            <CollectionView ItemsSource="{Binding MenuItems}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#F5F5F5"
                               CornerRadius="10"
                               Padding="10"
                               Margin="0,5"
                               HasShadow="True">
                            <Grid ColumnDefinitions="Auto, *"
                                  Padding="10">
                                <!-- Icon -->
                                <Label Text="{Binding icon}"
                                       FontSize="40"
                                       TextColor="{Binding iconColor}"
                                       Grid.Column="0"
                                       Margin="0,0,10,0"
                                       VerticalOptions="Center" />

                                <!-- Tên và mô tả -->
                                <VerticalStackLayout Grid.Column="1"
                                                     VerticalOptions="Center">
                                    <Label Text="{Binding name}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="#003087" />
                                    <Label Text="{Binding description}"
                                           FontSize="14"
                                           TextColor="Gray" />
                                </VerticalStackLayout>
                            </Grid>
                            <!-- Xử lý sự kiện khi chọn menu -->
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={x:Reference HomePage}, Path=BindingContext.NavigateCommand}"
                                                      CommandParameter="{Binding targetPage}" />
                            </Frame.GestureRecognizers>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Nút Đăng xuất -->
            <Button Text="Đăng xuất"
                    BackgroundColor="#003087"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    HorizontalOptions="Fill"
                    Clicked="OnLogoutClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>