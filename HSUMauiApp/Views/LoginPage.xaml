<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HSUMauiApp.Views.LoginPage"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">

    <Grid Padding="30">
        <VerticalStackLayout VerticalOptions="Center" Spacing="20">

            <!-- Logo -->
            <Image Source="hsulogo.png" HeightRequest="100" HorizontalOptions="Center"/>

            <!-- Tiêu đề -->
            <Label Text="Đăng Nhập" FontSize="30" FontAttributes="Bold" 
                   HorizontalOptions="Center" TextColor="#003087"/>

            <!-- Email Input -->
            <Frame Padding="5" CornerRadius="12" BackgroundColor="#F5F5F5" HasShadow="False">
                <HorizontalStackLayout>
                    <Image Source="mail_icon.png" WidthRequest="24" HeightRequest="24"
                           VerticalOptions="Center" Margin="10,0"/>
                    <Entry Placeholder="Email sinh viên"
                           Keyboard="Email"
                           BackgroundColor="Transparent"
                           TextColor="Black"
                           FontSize="16"
                           Text="{Binding UserEmail}"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- Password Input -->
            <Frame Padding="5" CornerRadius="12" BackgroundColor="#F5F5F5" HasShadow="False">
                <HorizontalStackLayout>
                    <Image Source="lock_icon.png" WidthRequest="24" HeightRequest="24"
                           VerticalOptions="Center" Margin="10,0"/>
                    <Entry Placeholder="Mật khẩu"
                           IsPassword="True"
                           BackgroundColor="Transparent"
                           TextColor="Black"
                           FontSize="16"
                           Text="{Binding Password}"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- Nút Đăng nhập -->
            <Button Text="Đăng Nhập"
                    BackgroundColor="#003087"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="50"
                    Command="{Binding LoginCommand}"/>

            <!-- Quên mật khẩu -->
            <!--<Label Text="Quên mật khẩu?" TextColor="#007AFF" FontSize="14"
                   HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}"/>
                </Label.GestureRecognizers>
            </Label>-->

        </VerticalStackLayout>
    </Grid>

</ContentPage>
