<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HSUMauiApp.Views.LoginPage"
             BackgroundColor="White"
             Title="Login">
    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

        <!-- Logo -->
        <Image Source="hsulogo.png" HeightRequest="120" HorizontalOptions="Center"/>
        
        <!-- Tiêu đề -->
        <Label
                Text="Đăng nhập vào HSU"
                FontSize="24"
                FontAttributes="Bold"
                TextColor="#003087"
                HorizontalOptions="Center"
                Margin="0,0,0,20" />
        
        <!-- Email Input -->
        <Frame
                BackgroundColor="#F5F5F5"
                CornerRadius="10"
                Padding="15"
                HasShadow="True">
            <Entry x:Name="EmailEntry"
                       Placeholder="Email sinh viên"
                       Keyboard="Email"
                       TextColor="Black"
                       PlaceholderColor="Gray"
                       BackgroundColor="White"
                       HeightRequest="50" />
        </Frame>

        <!-- Password Input -->
        <Frame
                BackgroundColor="#F5F5F5"
                CornerRadius="10"
                Padding="15"
                HasShadow="True">
            <Entry x:Name="PasswordEntry"
                       Placeholder="Mật khẩu"
                       IsPassword="True"
                       TextColor="Black"
                       PlaceholderColor="Gray"
                       BackgroundColor="White"
                       HeightRequest="50" />
        </Frame>

        <!-- Nút Đăng Nhập -->
        <Button Text="Đăng nhập"
                    BackgroundColor="#003087"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    HorizontalOptions="Fill"
                    Clicked="OnLoginClicked"/>
    </VerticalStackLayout>
</ContentPage>
