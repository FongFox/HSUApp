<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HSUMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:HSUMauiApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <!-- Trang đăng nhập (LandingPage) -->
    <ShellContent
        Title="Landing"
        ContentTemplate="{DataTemplate views:LandingPage}"
        Route="LandingPage" />

    <!-- Trang đăng nhập (LoginPage) -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <!-- Trang chủ -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:HomePage}"
        Route="HomePage" />

    <!-- Trang lịch học --><!--
    <ShellContent
        Title="Schedule"
        ContentTemplate="{DataTemplate views:SchedulePage}"
        Route="SchedulePage" />-->

    <!-- Trang xem điểm --><!--
    <ShellContent
        Title="Grades"
        ContentTemplate="{DataTemplate views:GradesPage}"
        Route="GradesPage" />

    --><!-- Trang đăng ký học phần --><!--
    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate views:RegisterPage}"
        Route="RegisterPage" />-->

    <!-- Trang thông báo --><!--
    <ShellContent
        Title="Notification"
        ContentTemplate="{DataTemplate views:NotificationPage}"
        Route="NotificationPage" />-->
</Shell>