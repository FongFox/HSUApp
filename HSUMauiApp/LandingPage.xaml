<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HSUMauiApp.Views.LandingPage"
             Title="Đăng nhập">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25">

            <Image Source="hsulogo.png"
                   WidthRequest="200"
                   HeightRequest="100"
                   HorizontalOptions="Center"/>

            <Entry x:Name="EmailEntry" Placeholder="Nhập email..." />
            <Entry x:Name="PasswordEntry" Placeholder="Nhập mật khẩu..." IsPassword="True" />
            <Button Text="Đăng nhập" Clicked="OnLoginClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
